@model library.category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header text-center">
        <h4>THÔNG TIN CHI TIẾT THỂ LOẠI</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.idCategory)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.idCategory)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.nameCategory)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.nameCategory)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ageLimit)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ageLimit)
            </dd>
        </dl>
    </div>
    <div class="card-footer text-muted">
        @Html.ActionLink("Edit", "Edit", new { id = Model.idCategory }, new { @class = "btn btn-warning btn-sm" }) |
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary btn-sm" })
    </div>
</div>
